{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "outDir": "./dist/lib",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "typeRoots": [
      "types",
      "../../types",
      "node_modules/@types"
    ],
    "isolatedModules": true,
    "baseUrl": "src"
  },
  "include": [
    "src"
  ]
}
